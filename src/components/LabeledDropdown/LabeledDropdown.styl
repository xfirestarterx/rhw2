@import '../../variables.styl'

.LabeledDropdown
  text-transform uppercase
  display flex
  padding 10px 0
  justify-content end
  margin-right 10px

  .Label
    display inline-block
    margin-right 10px
    color $dark100

  .Option
    position relative
    cursor pointer

    &:before
      position absolute
      content ' '
      top 50%
      transform translate(0, -50%)
      right -15px
      width 0
      height 0
      border-style solid
      border-width 8.7px 5px 0 5px
      border-color $accent transparent transparent transparent
