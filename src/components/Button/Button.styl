@import '../../variables.styl'

.Button
  cursor pointer
  border none
  padding 10px 15px
  text-transform uppercase
  font-size 18px
  white-space nowrap
  flex-grow 1
  border-radius 8px

  &.Default
    background rgba(255, 255, 255, .2)
    color $accent
    font-weight bold

  &.Accent
    background $accent
    color $white
    padding 15px
